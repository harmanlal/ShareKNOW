<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/txtTitleMessage"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:text="@string/txtPendingRequests"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMessageReq"
        android:layout_width="301dp"
        android:layout_height="261dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="55dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleMessage" />

    <Button
        android:id="@+id/btndelReq"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="21dp"
        android:text="@string/btnDelRequest"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpBook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnRespond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="@string/btnRespond"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btndelReq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUpBook"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="28dp"
        android:text="@string/btnUpdateBookAvail"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>